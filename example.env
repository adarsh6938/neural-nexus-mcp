# Neural Nexus MCP - Configuration Example
# Copy this file to .env and modify as needed

# Embedding Provider Configuration
# Options: 'transformers' (default, local), 'openai' (requires API key), 'default' (mock)
EMBEDDING_PROVIDER=transformers

# Local Transformers.js Configuration (recommended)
# Model: Xenova/all-MiniLM-L6-v2 (384 dims), Xenova/all-distilroberta-v1 (768 dims)
TRANSFORMERS_MODEL=Xenova/all-MiniLM-L6-v2
TRANSFORMERS_DIMENSIONS=384
TRANSFORMERS_MAX_TOKENS=512

# OpenAI Configuration (optional, only if using EMBEDDING_PROVIDER=openai)
# OPENAI_API_KEY=your-openai-api-key
# OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Neo4j Database Configuration
NEO4J_URI=bolt://localhost:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=neuralmcp

# Testing Configuration
# Set to 'true' to use mock embeddings for testing (faster, no model loading)
MOCK_EMBEDDINGS=false

# Logging Configuration
LOG_LEVEL=info